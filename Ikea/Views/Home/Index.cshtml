@model IEnumerable<Ikea.Models.OrganizationalStructure>

@{
    ViewData["Title"] = "GetEmployees";
}

<h1>Employees</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessUnit)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessUnit)
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-action="ExportExcel" asp-route-filter="0">Export Excel Report</a>
